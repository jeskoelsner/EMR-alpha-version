<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="loginScreen">
		<item name="android:background">@drawable/login_gradient</item>
	</style>
	
    <style name="bubbleBox">
        <item name="android:layout_marginTop">24dp</item>
    	<item name="android:layout_marginRight">24dp</item>
    	<item name="android:layout_marginLeft">24dp</item>
    	<item name="android:layout_alignParentTop">true</item>
    </style>
	
    <style name="userVerified">
        <item name="android:text">@string/userVerifiedText</item>
    	<item name="android:gravity">center</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:background">@drawable/user_verified_bubble</item>
	</style>
	
    <style name="userUnverified">
        <item name="android:text">@string/userUnverifiedText</item>
    	<item name="android:gravity">center</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:background">@drawable/user_unverified_bubble</item>
	</style>
	
    <style name="inputText">
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">#ff333333</item> 	
		<item name="android:textColorHint">#ffc2c2c2</item>
		<item name="android:background">@drawable/input_text</item>
	</style>
    
    <style name="buttonHalf">
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">#ff333333</item> 		
		<item name="android:background">@drawable/button</item>
	</style>
	
    <style name="buttonFull">
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">#ff333333</item> 		
		<item name="android:background">@drawable/button</item>
	</style>
	
    <style name="buttonCall">
		<item name="android:textSize">32dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ffffffff</item> 		
		<item name="android:background">@drawable/button_call</item>
	</style>
    
</resources>