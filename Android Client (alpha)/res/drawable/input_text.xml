<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
			<solid
            	android:color="#FFFFFFFF" />
            <corners
                android:radius="2dp" />
            <stroke android:color="#ff9c9d9e" android:width="2dp"/>
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
			<solid
            	android:color="#FFFFFFFF" />
            <corners
                android:radius="2dp" />
            <stroke android:color="#ffc3c9d2" android:width="2dp"/>
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
    </item>
    
    <item>
        <shape>
			<solid
            	android:color="#FFFFFFFF" />
            <corners
                android:radius="2dp" />
            <stroke android:color="#ffc3c9d2" android:width="2dp"/>
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
    </item>
</selector>