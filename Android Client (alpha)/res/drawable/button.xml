<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <layer-list>
            <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
				<bitmap android:dither="true" android:src="@drawable/bg_button"/>                
            </item>
        	<item>
        	    <shape android:shape="rectangle">
					<stroke
					    android:width="2dp"
		            	android:color="#FF707378" />
		            <corners
		                android:radius="0dp" />
		            <padding
		                android:left="15dp"
		                android:top="15dp"
		                android:right="15dp"
		                android:bottom="15dp" />
		            <solid android:color="#11000000"/>
		        </shape>
        	</item>
        </layer-list>
    </item>
    
    <item>
        <layer-list>
            <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
				<bitmap android:dither="true" android:src="@drawable/bg_button"/>                
            </item>
        	<item>
        	    <shape android:shape="rectangle">
					<stroke
					    android:width="2dp"
		            	android:color="#FFA2A4A7" />
		            <corners
		                android:radius="0dp" />
		            <padding
		                android:left="15dp"
		                android:top="15dp"
		                android:right="15dp"
		                android:bottom="15dp" />
		            <solid android:color="@android:color/transparent"/>
		        </shape>
        	</item>
        </layer-list>
    </item>

</selector>